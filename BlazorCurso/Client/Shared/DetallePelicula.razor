<div style="margin-right: 2%; margin-bottom: 10px; text-align: center;">
    <a href="@urlPelicula">
        <img src="@pelicula.Poster" alt="Poster" style="width: 225px; height: 300px;" />
    </a>
    <p style="max-width: 225px; height: 44px; font-size: 15px; font-weight: bold;"><a href="@urlPelicula">@pelicula.TituloCorto</a></p>
    <div>
        <a class="btn btn-info" href="peliculas/editar/@pelicula.Id">Editar</a>
        <button type="button" class="btn btn-danger" @onclick="@(()=>EliminarPelicula.InvokeAsync(pelicula))">Borrar</button>
    </div>
</div>

@code {

    [Parameter] public Pelicula pelicula { get; set; }
    [Parameter] public bool MostrarBotones { get; set; } = false;
    [Parameter] public EventCallback<Pelicula> EliminarPelicula { get; set; }

    private string urlPelicula = string.Empty;

    protected override void OnInitialized()
    {
        urlPelicula = $"pelicula/{pelicula?.Id}/{pelicula?.Titulo?.Replace(" ", "-")}";
    }
}
